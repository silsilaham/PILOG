# ===========================================
# Login Credentials (Single Account)
# ===========================================
# Username dan password untuk akses aplikasi
# Edit di index.html baris ~1271-1272

LOGIN_USERNAME=admin
LOGIN_PASSWORD=pilog2024

# ===========================================
# Database Tables
# ===========================================
# Struktur database di Supabase:
# 
# 1. jobs                           - Job Orders (PPN/Non-PPN)
# 2. customers                      - Data Pelanggan
# 3. drivers                        - Data Sopir/Driver
# 4. banks                          - Rekening Bank
# 5. invoice_items_master           - Template Item Invoice
# 6. operational_cost_items_master  - Template Biaya Operasional
#
# Semua table memiliki struktur:
# - id (TEXT PRIMARY KEY)
# - data (JSONB)
# - created_at (TIMESTAMP)
# - updated_at (TIMESTAMP)

# ===========================================
# Features Enabled
# ===========================================
REALTIME_SYNC=true              # Real-time sync antar device
LOCALSTORAGE_FALLBACK=true      # Fallback ke localStorage jika offline
AUTO_BACKUP=true                # Backup otomatis ke Supabase
MULTI_USER_ACCESS=true          # Multi-user dapat akses data sama

# ===========================================
# Regional Settings
# ===========================================
SUPABASE_REGION=Southeast Asia (Singapore)
TIMEZONE=Asia/Jakarta
CURRENCY=IDR
LOCALE=id-ID

# ===========================================
# Security Notes
# ===========================================
# ⚠️ PENTING:
# 
# 1. File .env JANGAN di-commit ke Git!
#    Tambahkan .env ke .gitignore
# 
# 2. Anon key aman untuk public use
#    (sudah dibatasi oleh Row Level Security)
# 
# 3. Service Role key JANGAN digunakan di frontend!
#    (full access ke database)
# 
# 4. Untuk production, consider:
#    - Enable Row Level Security (RLS)
#    - Implementasi proper authentication
#    - Rate limiting
#    - API key rotation
#
# ===========================================

